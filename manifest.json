{
  "manifest_version": 3,
  "name": "SuperEmail Marketing",
  "version": "1.0",
  "description": "Advanced email marketing platform integrated with Gmail",
  "permissions": [
    "activeTab",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://sheets.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "oauth2": {
    "client_id": "253128094592-m80gc9126hab0vrgr8s13pk86h3dup90.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.compose",
      "https://www.googleapis.com/auth/spreadsheets.readonly"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["template-editor.html"],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}